<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!--sysadmin.ejs is inside admin folder, go up 1 level to find partials-->
    <%- include('../partials/header.ejs') %>

    <title>System Admin</title>
  </head>
  <body>
    <h1>List of Users</h1>
  <!--Button--> 
  <!--Display all users inDB-->
   <a href = "/admin/sysadmin" class="btn btn-outline-primary">System Admin Home</a>
   <br>
   <% if(!error) { %>
   
    <br>
    <% users.forEach(u => {%>
        Email: <%= u.email %><br>
        DisplayName: <%= u.DisplayName %><br>
        PhoneNumber: <%= u.PhoneNumber %><br>
        <img src="<%= u.photoURL%>"><br><br>
    <% }) %>
   <% } else { %>
        <%= error %>
   <% } %>


<%- include('../partials/scripts.ejs') %>
  </body>
</html>